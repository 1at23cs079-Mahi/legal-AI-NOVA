rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection:
    // - Allow any authenticated user to create their own user document.
    // - Allow users to read, update, or delete only their own document.
    match /users/{userId} {
      allow create: if request.auth != null;
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Example: user-specific cases or documents collection
    match /cases/{caseId} {
      allow create: if request.auth != null; // any logged-in user can create
      allow read, update, delete: if request.auth != null 
                                  && request.auth.uid == resource.data.ownerId;
    }

    // Example: research queries for Legal AI (per user)
    match /queries/{queryId} {
      allow create: if request.auth != null; 
      allow read, update, delete: if request.auth != null 
                                  && request.auth.uid == resource.data.userId;
    }
  }
}
